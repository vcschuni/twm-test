-->
<form id="mfn-connection-location-form" class="border p-2 layer-switcher lc-fs-layer-adder" style="display: none;"> <!-- was "display: block" -->
	<!--legend class="w-auto">Connection Location</legend-->
		<!-- Inputs will be added here dynamically -->
	<div class="input-group input-group-sm mb-1" style="">
		<div class="input-group-prepend">
			<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label">Type</span>
		</div>
		<select class="le-form-input custom-select" key="LOCATION_TYPE"><option value="Junction Box">Junction Box</option><option value="Cabinet">Cabinet</option><option value="Vault">Vault</option><option value="Building">Building</option></select>
	</div><div class="input-group input-group-sm mb-1" style="">
		<div class="input-group-prepend">
			<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label">Name</span>
		</div>
		<input type="text" class="le-form-input form-control" key="LOCATION_NAME" required>
	</div><div class="input-group input-group-sm mb-1" style="">
		<div class="input-group-prepend">
			<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label">Address&nbsp;
				 <button id="mfn-reverse-geocode1" type="button" title="Nearest Street Address" class="btn btn-outline-info btn-sm justify-content-end "><span class="oi oi-envelope-closed"></span></button>
				 <button id="mfn-reverse-geocode2" type="button" title="Nearest Intersection" class="btn btn-outline-info btn-sm justify-content-end "><span class="oi oi-signpost"></span></button>
				 <button id="mfn-reverse-geocode3" type="button" title="Lat/Long"class="btn btn-outline-info btn-sm justify-content-end "><span class="oi oi-map-marker"></span></button></span>		
		</div>
		<input type="text" class="le-form-input form-control" key="LOCATION_ADDRESS">
	</div><div class="input-group input-group-sm mb-1" style="">
		<div class="input-group-prepend">
			<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label">Notes</span>
		</div>
		<input type="text" class="le-form-input form-control" key="LOCATION_NOTES">
	</div>
	<div class="input-group input-group-sm justify-content-end  mb-1" style="">
		<button id="mfn-cancel-location" type="button" class="btn btn-outline-secondary">Cancel</button>
		<button id="mfn-save-location" type="button" class="btn btn-outline-success">Save</button>
	</div>
</form>

