<!-- Notes on KML with styling export -->
<div class="mb-3">
	<a data-bs-toggle="collapse" href="#ae-intructions-panel" role="button" aria-expanded="false" aria-controls="ae-intructions-panel" class="btn btn-sm btn-light btn-block col-12 shadow-sm ae-with-chevron">
