<form id="cr-form">

	<!-- Filterable Layer Selector -->
	<div id="cr-filter-layer-select-container" class="input-group input-group-sm mb-3" style="display:none;">
		<span class="input-group-text">CaRT Reporter</span>
		<select id="cr-filter-layer-select" class="form-select form-select-sm"></select> 
	</div>

	<!-- Filter fieldset -->
	<fieldset id="cr-fs-filter-controls" class="border p-2" style="display:none;">
		<legend class="w-auto">Report Criteria</legend>
		<div id="cr-filter-controls">
			<!-- one or more controls will be added here -->
		</div>
	</fieldset>
	
</form>

<!-- Hidden templates for filter controls -->
<div class="form-check cr-filter-control cr-checkbox-template" style="display:none;">
	<label class="form-check-label">
		<input type="checkbox" class="form-check-input">
		<span class="title"></span>
	</label>
</div>

<div class="input-group input-group-sm mb-2 cr-filter-control cr-textfield-template" style="display:none;">
	<span class="input-group-text"></span>
	<input type="text" class="form-control" placeholder="">
</div>

<div class="input-group input-group-sm mb-2 cr-filter-control cr-numberfield-template" style="display:none;">
	<span class="input-group-text"></span>
	<input type="number" class="form-control" placeholder="">
</div>

<div class="input-group input-group-sm mb-2  cr-filter-control cr-option-template" style="display:none;">
	<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label"></span>
	<select multiple  width="100%" class="cr-form-input"></select>
</div>


<div class="input-group input-group-sm mb-2  cr-filter-control cr-number-range-template" style="display:none;">
	<span class="input-group-text border-0 bg-transparent justify-content-end le-attr-input-label"></span>
	<div class="cr-amount input-group input-group-sm mb-2 container-fluid ">
		<div  title="Shortcuts: K=thousands M=millions" class="row">
			<div class="col-lg-6 cr-amount" >
				<input type="text" class="cr-amount1 form-control" >
			</div>
			<div class="col-lg-6 cr-amount">
				<input type="text" class="cr-amount2 form-control" >
			</div>
		</div>
	</div>
	
	<div class="input-group input-group-sm mb-2">
		<span class="cr-slider-range form-control" style="height: 10px;"></span>
	</div>
</div>
	
	

					<!-- Chart -->
					<div id="cr-chartSpace" class="cr-chartSpace" style="display:none;">
						<div class="container-fluid">
							<div class="row">
								<div class="cr-chartDiv col-sm-6" >
								</div>
								<div class="cr-infoDiv col-sm-6" style="position: relative">
									<div class="cr-infoDiv-closer ol-popup-closer"><span class="oi oi-x"></span></div>
									<div class="cr-infoDiv-content ol-popup-content"></div>
								</div>
							</div>
						</div>
						<div class="container-fluid">
							<div class="cr-chartControl modal-footer row">
								<a id="link"></a>
							</div>
						</div>
					</div>

